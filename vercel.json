{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/server/api.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/server/**/*"],
        "tsconfig": "tsconfig.api.json",
        "nodeVersion": "22.x",
        "buildCommand": "npm run build:api"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/src/server/api.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 